{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "rootDir": "./src",
    "esModuleInterop": true,
    "importHelpers": false,
    "lib": ["DOM", "DOM.Iterable", "DOM.AsyncIterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitThis": false,
    "paths": {
      "rimmel": ["./src/index"]
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "files": ["src/index.ts", "src/utils/camelCase.ts"],
  "include": ["rollup.config.ts", "src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "@types", "dist", "build"]
}
