{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "lib": ["DOM", "DOM.Iterable", "DOM.AsyncIterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitThis": false,
    "paths": {
      "rimmel": ["./src/index"]
    },
    "rootDir": "./src",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "files": ["src/index.ts"],
  "include": ["vite.config.ts", "rollup.config.ts", "src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "@types", "dist", "build"]
}
